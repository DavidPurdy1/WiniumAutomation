<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>
    <appender name="DebugFile" type="log4net.Appender.RollingFileAppender">
      <file value="c:\temp\Logs\Log4NetWinUI_Debug.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="'_'yyyyMMdd'.log'" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger :: %message%newline" />
      </layout>
    </appender>
    <appender name="MetricsFile" type="log4net.Appender.RollingFileAppender">
      <file value="c:\temp\Logs\Log4NetWinUI_Metrics.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="'_'yyyyMMdd'.log'" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger %class :: %message%newline" />
      </layout>
    </appender>
    <appender name="StartupFile" type="log4net.Appender.RollingFileAppender">
      <file value="c:\temp\Logs\Log4NetWinUI_Startup.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="'_'yyyyMMdd'.log'" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger %class :: %message%newline" />
      </layout>
    </appender>
    <logger name="com.infodynamics">
      <level value="DEBUG" />
      <appender-ref ref="DebugFile" />
    </logger>
    <logger name="com.infodynamics.*">
      <level value="DEBUG" />
      <appender-ref ref="DebugFile" />
    </logger>
    <logger name="com.infodynamics.logging.ui.default">
      <level value="DEBUG" />
      <appender-ref ref="DebugFile" />
    </logger>
    <logger name="com.infodynamics.logging.ui.LoggerList">
      <level value="DEBUG" />
      <appender-ref ref="DebugFile" />
    </logger>
    <logger name="metricsLog">
      <level value="INFO" />
      <appender-ref ref="MetricsFile" />
    </logger>
    <logger name="startupLog">
      <level value="INFO" />
      <appender-ref ref="StartupFile" />
    </logger>
  </log4net>

  <appSettings>
    <add key="AppParameterDataSource" value="Data Source=ROADMTB\SQLEXPRESS,21639;Initial Catalog=InfodUtility;integrated security=SSPI;" />
    <add key="AppParameterSP" value="SelectByApp_ApplicationParameter" />
    <add key="AppName" value="Log4NetWinUI" />
  </appSettings>

</configuration>